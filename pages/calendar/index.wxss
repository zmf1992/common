/**index.wxss**/
.calendar-container{
    position: relative;
    height: 100%;
    padding: 0px 10px 10px;
    font-weight:300;
}
.loading{
    position: absolute;
    left:50%;
    top:50%;
    width:120rpx;
    height:120rpx;
    margin-left: -60rpx;
    margin-top: -60rpx;
}
.container-inner{
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    min-height: 100%;
    margin-bottom: 10px;  
    opacity:0;
}
.inner-date{
    flex-grow: 1;
    border-bottom:1px solid #494949;
    padding-bottom: 50rpx;
    width: 650rpx;
    margin: 0 auto;
    margin-bottom: 70rpx;
}
.date-year-month{
    margin: 10rpx auto;
    text-align: center;
    line-height: 60rpx;
    height: 60rpx;
    border-bottom:1px solid #494949;
    border-top:1px solid #494949;
    width: 650rpx;
}
.date-year-month text{
    font-size: 14px;
    padding: 0 26rpx;
}

.date-day{
    text-align: center;
    font-size: 180px;
    font-family: 'Times New Roman', Times, serif/*'PingFang SC',roboto*/;
    font-weight: 500;
    letter-spacing: -5px;
    margin:10px 0;
}
.date-show-year{
    text-align: center;
    font-size: 16px;
    margin-bottom: 10rpx;
    color:#3A3A3A;
}
.date-directors{
    text-align: center;
    color:#AAA;
    font-size: 12px;
}
.date-directors text:last-child text{
    display:none;
}
.inner-comment{
    padding: 30rpx;
    color: #3A3A3A;
    font-size: 28rpx;
    border-radius: 4px;
    background:#fcfcfc;
    box-shadow: 0px 0px 3px 0px rgba(50,86,123,0.2);
    /*border:2rpx solid #e0e0e0;*/
    width:590rpx;
    margin:0 auto;
}
.inner-comment text{
    color:#888;
}
.inner-movie{
  padding:5px 0;
  width:650rpx;
  margin:20rpx auto;
  font-size:28rpx;
  line-height: 44rpx;
}
.movie-average{
    float:left;
    color: #3A3A3A;
    font-weight:300;
    margin-right:10rpx;  
    font-size:28rpx;
}
.stars{
  float:left;
}
.star{
    width:28rpx;
    height:28rpx;
    margin:4rpx 0 0 8rpx;
}
.inner-from {
  margin-left: 20rpx;
  font-size: 12pxï¼›
}
.inner-movie .title{
  float:left;
  color:#3A3A3A;
}
.inner-movie .movie-info{
  float:right;
}