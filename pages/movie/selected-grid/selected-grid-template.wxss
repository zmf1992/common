/* pages/movie/selected-grid/selected-grid.wxss */

.selected-wrapper {
  display: inline-block;
  border-radius: 20rpx;
  box-sizing: border-box;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.top250-gradient {
   background: -webkit-linear-gradient(-125deg,#57bdbf,#2f9de2);
  background: linear-gradient(-125deg,#57bdbf,#2f9de2); 
  /*background-color: rgba(255, 140, 0, 0.6);*/

}

.weekly-gradient {
  background: -webkit-linear-gradient(-128deg,#e14062,#a13582);
  background: linear-gradient(-128deg,#e14062,#a13582);
  /* background-color: rgba(31, 181, 82, 0.6); */
}

.newMovie-gradient {
  background: -webkit-linear-gradient(-113deg,#81328d,#592984);
  background: linear-gradient(-113deg,#81328d,#592984);
  /* background-color: rgba(153, 87, 219, 0.6); */
}

.usBox-gradient {
  background: -webkit-linear-gradient(-141deg,#ffc000,#ea942e);
  background: linear-gradient(-141deg,#ffc000,#ea942e);
  /* background-color: rgba(248,91,132, 0.6); */
}


.selected-wrapper:first-child {
  margin-left: 0rpx;
}

.selected-wrapper:last-child {
  margin-right: 0rpx;
}

.selected-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 300rpx;
  height: 300rpx;
}

.selected-content .name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-top: 30rpx;
}

.selected-content .desc {
  font-size: 24rpx;
  color: #fff;
}

.selected-poster {
  margin-top: 18rpx;
}

.selected-content .selected-poster-left, .selected-poster-right {
  width: 72rpx;
  height: 110rpx;
  margin-bottom: 15rpx;
}

.selected-content .selected-poster-center {
  width: 100rpx;
  height: 148rpx;
}
