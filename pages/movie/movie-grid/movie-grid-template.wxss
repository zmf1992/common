/* pages/movie/movie-grid/movie-grid.wxss */
@import "/pages/movie/movie-rating/movie-rating-template.wxss";
.container{
  background:#eee;
}
.movie-wrapper {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.movie-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-wrapper:first-child {
  margin-left: 0rpx;
}

.movie-wrapper:last-child {
  margin-right: 0rpx;
}

.movie-wrapper .poster {
  width: 200rpx;
  height: 280rpx;
}

.movie-wrapper .name {
  width: 200rpx;
  color: #000;
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.movie-wrapper .wish-count {
  color: #9e9e9e;
  font-size: 24rpx;

}
.page-session-spacing{
  margin-bottom:15rpx;
}
.page-session{border:none 0;}